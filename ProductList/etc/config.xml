<config>
    <modules>
        <Ecommistry_ProductList>
            <version>1.0.0.0</version>
        </Ecommistry_ProductList>
    </modules>
    <global>
        <!--helper declarations-->
        <helpers>
            <ecommistry_productlist>
                <class>Ecommistry_ProductList_Helper</class>
            </ecommistry_productlist>
        </helpers>
        <!--helper declarations-->

        <!--block declarations-->
        <blocks>
            <ecommistry_productlist>
                <class>Ecommistry_ProductList_Block</class>
            </ecommistry_productlist>
        </blocks>
        <!--block declarations-->
        <!--attribute setup-->
        <resources>
            <ecommistry_productlist_setup>
                <setup>
                    <module>Ecommistry_ProductList</module>
                    <class>Ecommistry_ProductList_Model_Resource_Setup</class>
                </setup>
            </ecommistry_productlist_setup>
        </resources>
        <!--attribute setup-->    
    </global>
    <frontend>
        <!-- module routing-->
        <routers>
            <productlist>
                <use>standard</use>
                <args>
                    <module>Ecommistry_ProductList</module>
                    <frontName>productlist</frontName>
                </args>
            </productlist>
        </routers>
        <!-- module routing-->

        <!-- layout declaration-->
        <layout>
            <updates>
                <productlist module="Ecommistry_ProductList">
                    <file>ecommistry_productlist.xml</file>
                </productlist>
            </updates>
        </layout>
        <!-- layout declaration-->
    </frontend>
</config>
